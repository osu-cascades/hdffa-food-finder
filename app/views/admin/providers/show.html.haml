.subnav
  .title
    %h1= @provider.name
  .actions
    = link_to 'Delete', [:admin, @provider], method: :delete, data: { confirm: 'Are you sure?' }, class: 'danger'
    = link_to 'Edit', edit_admin_provider_path(@provider), class: 'primary'

%dl.row
  %dt.col-sm-3 Description
  %dd.col-sm-9= @provider.description
  %dt.col-sm-3 Street Address
  %dd.col-sm-9= @provider.street_address
  %dt.col-sm-3 City
  %dd.col-sm-9= @provider.city
  %dt.col-sm-3 State
  %dd.col-sm-9= @provider.state
  %dt.col-sm-3 Zip Code
  %dd.col-sm-9= @provider.zip
  %dt.col-sm-3 Email
  %dd.col-sm-9= mail_to @provider.email
  %dt.col-sm-3 Phone
  %dd.col-sm-9= "#{@provider.phone}".phony_formatted(normalize: :NA, format: :international, spaces: '-')
  %dt.col-sm-3 Website
  %dd.col-sm-9= link_to "#{@provider.url}", @provider.url
  %dt.col-sm-3 Hours Of Operation
  %dd.col-sm-9= @provider.hours_of_operation
  %dt.col-sm-3 Keywords
  %dd.col-sm-9= @provider.keywords
  %dt.col-sm-3 Latitude
  %dd.col-sm-9= @provider.latitude
  %dt.col-sm-3 Longitude
  %dd.col-sm-9= @provider.longitude
  %dt.col-sm-3 Logo
  %dd.col-sm-9= image_tag(@provider.logo) if @provider.logo.attached?
