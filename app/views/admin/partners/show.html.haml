.subnav
  .title
    %h1= @partner.name
  .actions
    = link_to 'Delete', [:admin, @partner], method: :delete, data: { confirm: 'Are you sure?' }, class: 'danger'
    = link_to 'Edit', edit_admin_partner_path(@partner), class: 'primary'

.row.mt-5
  .col-6
    %dl.row
      %dt.col-sm-3 Description
      %dd.col-sm-9= @partner.description
      %dt.col-sm-3 Street Address
      %dd.col-sm-9= @partner.street_address
      %dt.col-sm-3 City
      %dd.col-sm-9= @partner.city
      %dt.col-sm-3 State
      %dd.col-sm-9= @partner.state
      %dt.col-sm-3 Zip Code
      %dd.col-sm-9= @partner.zip
      %dt.col-sm-3 Email
      %dd.col-sm-9= mail_to @partner.email
      %dt.col-sm-3 Phone
      %dd.col-sm-9= "#{@partner.phone}".phony_formatted(normalize: :NA, format: :national, spaces: ' ')
      %dt.col-sm-3 Website
      %dd.col-sm-9= link_to "#{@partner.url}", @partner.url
      %dt.col-sm-3 Hours Of Operation
      %dd.col-sm-9= @partner.hours_of_operation
      %dt.col-sm-3 Categories
      %dd.col-sm-9
        - @partner.categories.each do |category|
          .row-sm-9= category.name
      %dt.col-sm-3 Products
      %dd.col-sm-9
        - @partner.products.each do |product|
          .row-sm-9= product.name


  .col-6
    %dl.row
      .text-center= image_tag(@partner.logo) if @partner.logo.attached?
    %dl.row
      %dt.col-sm-3 Notes

      %dd.col-sm-9
        - @partner.notes.each do |note|
          %strong= note.title
          %body= date_time(note) 
          / .actions= link_to 'View Body', "note-body" => "#{note.body}"  
          %dl.row{:id => "bodybutton"}View Body
          %dl.row.a{:id => "notebody"}#{note.body} 
          %dl.row.actions= link_to "Delete Note", @note, id: "notedelete", class: "btn btn-primary", method: :delete, data: { confirm: "This note will be permanently deleted, press OK to confirm" }
        = button_tag "+", id: "notebutton", class: 'primary' 
      
        #notesform
          = form_for [:admin, @partner, Note.new] do |f|
            .form-group
              = f.label :title
              = f.text_field :title, class: 'form-control'
            .form-group
              = f.text_area :body, class: 'form-control', rows: 8 
            .form-group
              = f.submit({class: 'form-control btn btn-success'})
              -#= button_tag 'Submit', type: 'submit', class: "btn btn-primary"
            



